.skills-row__title {
  margin-bottom: 26px;
  font-size: 24px;
  font-weight: 700;
  font-family: "Alegreya Sans";
  color: #fff;
  @include tablets {
    text-align: center;
  }
  @include phones {
    font-size: 18px;
    margin-bottom: 2%;
  }
}

.skills-row__list {
  display: flex;
  flex-wrap: wrap;
  margin-left: -4%;
  @include phones {
    justify-content: center;
  }
}

.skills-row__item {
  margin-left: 4%;
}